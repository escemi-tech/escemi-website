{
  "name": "escemi-website",
  "version": "1.0.0",
  "description": "ESCEMI corporate website built with Astro",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/escemi-tech/escemi-website.git"
  },
  "author": {
    "name": "ESCEMI",
    "email": "developer@escemi.com"
  },
  "scripts": {
    "dev": "astro dev --root astro-src",
    "start": "astro dev --root astro-src",
    "build": "astro check --root astro-src && astro build --root astro-src",
    "preview": "astro preview --root astro-src",
    "clean": "rimraf dist .astro",
    "astro": "astro",
    "format": "prettier --cache --write '**/*.{ts,tsx,astro,md}'",
    "lint": "eslint \"astro-src/**/*.{ts,tsx,astro}\" --fix",
    "typecheck": "astro check --root astro-src"
  },
  "dependencies": {
    "astro": "^5.13.2",
    "@astrojs/check": "^0.9.4",
    "@astrojs/tailwind": "^5.1.5",
    "@astrojs/sitemap": "^3.5.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "astro-eslint-parser": "^1.0.3",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.14.1",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "astro",
    "website", 
    "corporate",
    "escemi",
    "typescript"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/escemi-tech/escemi-website/issues"
  },
  "homepage": "https://github.com/escemi-tech/escemi-website#readme",
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "plugins": ["prettier-plugin-astro"],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}
