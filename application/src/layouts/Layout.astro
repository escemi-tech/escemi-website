---
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale, MetaCopy } from '../../i18n.config';
import { LOCALE_LABELS, SITE_NAME, SUPPORTED_LOCALES } from '../../i18n.config';
import '../styles/global.css';

interface Props {
	locale: Locale;
	meta: MetaCopy;
}

const { locale, meta } = Astro.props;
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{meta.title}</title>
		<meta name="description" content={meta.description} />
	</head>
	<body class="bg-white text-gray-900 antialiased">
		<header class="fixed top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-md border-b border-gray-200 shadow-sm">
			<div class="max-w-7xl mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<strong class="text-2xl font-bold text-indigo-600 tracking-tight">{SITE_NAME}</strong>
					<nav aria-label="Language selector">
						<ul class="flex gap-2">
							{SUPPORTED_LOCALES.map((code) => (
								<li>
									{code === locale ? (
										<span aria-current="true" class="px-4 py-2 bg-indigo-600 text-white font-medium rounded-lg">
											{LOCALE_LABELS[code]}
										</span>
									) : (
										<a 
											href={getRelativeLocaleUrl(code, Astro.url.pathname)}
											class="px-4 py-2 text-gray-700 hover:bg-gray-100 font-medium rounded-lg transition-colors duration-200"
										>
											{LOCALE_LABELS[code]}
										</a>
									)}
								</li>
							))}
						</ul>
					</nav>
				</div>
			</div>
		</header>
		<main class="pt-20">
			<slot />
		</main>
		<footer class="bg-gray-900 text-white py-12">
			<div class="max-w-6xl mx-auto px-6 text-center">
				<p class="text-gray-400 mb-4">Â© {new Date().getFullYear()} {SITE_NAME}. All rights reserved.</p>
				<div class="flex justify-center gap-6">
					<a href="https://github.com/escemi-tech" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
						GitHub
					</a>
					<a href="https://www.linkedin.com/company/escemi" target="_blank" rel="noopener noreferrer" class="text-gray-400 hover:text-white transition-colors">
						LinkedIn
					</a>
				</div>
			</div>
		</footer>
	</body>
</html>
