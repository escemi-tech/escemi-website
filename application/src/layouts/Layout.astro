---
import { getRelativeLocaleUrl } from 'astro:i18n';
import type { Locale, MetaCopy } from '../../i18n.config';
import { LOCALE_LABELS, SITE_NAME, SUPPORTED_LOCALES } from '../../i18n.config';
import '../styles/global.css';

interface Props {
	locale: Locale;
	meta: MetaCopy;
}

const { locale, meta } = Astro.props;
---

<!doctype html>
<html lang={locale} class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{meta.title}</title>
		<meta name="description" content={meta.description} />
		<!-- Font: Inter for body, Space Grotesk for headings -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700;800;900&family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-black text-white antialiased overflow-x-hidden font-[Inter]">
		<!-- Futuristic fixed header -->
		<header class="fixed top-0 left-0 right-0 z-50 bg-gray-950/80 backdrop-blur-xl border-b border-cyan-500/20">
			<div class="max-w-7xl mx-auto px-6 py-5">
				<div class="flex items-center justify-between">
					<!-- Brand with neon effect -->
					<strong class="text-3xl font-black tracking-tight font-['Space_Grotesk']">
						<span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
							{SITE_NAME}
						</span>
					</strong>
					
					<!-- Language selector with futuristic style -->
					<nav aria-label="Language selector">
						<ul class="flex gap-3">
							{SUPPORTED_LOCALES.map((code) => (
								<li>
									{code === locale ? (
										<span 
											aria-current="true" 
											class="px-5 py-2.5 bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-bold uppercase text-sm tracking-wider border border-cyan-400/50 shadow-[0_0_20px_rgba(6,182,212,0.3)]"
										>
											{LOCALE_LABELS[code]}
										</span>
									) : (
										<a 
											href={getRelativeLocaleUrl(code, Astro.url.pathname)}
											class="px-5 py-2.5 border border-gray-700 text-gray-400 hover:text-cyan-400 hover:border-cyan-500/50 font-bold uppercase text-sm tracking-wider transition-all duration-300"
										>
											{LOCALE_LABELS[code]}
										</a>
									)}
								</li>
							))}
						</ul>
					</nav>
				</div>
			</div>
		</header>

		<main class="pt-0">
			<slot />
		</main>

		<!-- Futuristic footer -->
		<footer class="relative bg-black border-t border-gray-800 py-16 overflow-hidden">
			<!-- Subtle glow effect -->
			<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_top,rgba(6,182,212,0.1),transparent_50%)]"></div>
			
			<div class="relative z-10 max-w-7xl mx-auto px-6">
				<div class="text-center mb-8">
					<div class="text-4xl font-black mb-4 font-['Space_Grotesk']">
						<span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
							{SITE_NAME}
						</span>
					</div>
					<p class="text-gray-500 text-sm">Â© {new Date().getFullYear()} All rights reserved.</p>
				</div>

				<div class="flex justify-center gap-8">
					<a 
						href="https://github.com/escemi-tech" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="text-gray-500 hover:text-cyan-400 transition-colors font-semibold"
					>
						GitHub
					</a>
					<a 
						href="https://www.linkedin.com/company/escemi" 
						target="_blank" 
						rel="noopener noreferrer" 
						class="text-gray-500 hover:text-cyan-400 transition-colors font-semibold"
					>
						LinkedIn
					</a>
				</div>
			</div>
		</footer>

		<!-- Performance: Load fonts asynchronously -->
		<style is:global>
			/* Apply fonts globally */
			h1, h2, h3, h4, h5, h6 {
				font-family: 'Space Grotesk', sans-serif;
			}
			
			body {
				font-family: 'Inter', sans-serif;
			}
		</style>
	</body>
</html>
