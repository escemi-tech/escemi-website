---
import astroLogo from '../assets/astro.svg';
import background from '../assets/background.svg';
import type { LocaleCopy } from '../../i18n.config';

interface Props {
	copy: LocaleCopy;
}

const { copy } = Astro.props;
const { hero, news } = copy;
---

<div class="hero-shell">
	<img class="hero-shell__background" src={background.src} alt="" fetchpriority="high" />
	<section class="hero">
		<div class="hero__eyebrow">
			<img src={astroLogo.src} width="115" height="48" alt="Astro" />
		</div>
		<h1>{hero.heading}</h1>
		<p class="hero__lead">{hero.body}</p>
		<div class="hero__actions">
			<a class="button button--primary" href={hero.primaryCta.href}>{hero.primaryCta.label}</a>
			<a class="button button--ghost" href={hero.secondaryCta.href}>{hero.secondaryCta.label}</a>
		</div>
	</section>
	<a href={news.href} class="hero-card">
		<h2>{news.title}</h2>
		<p>{news.body}</p>
		<span class="hero-card__link">{news.linkLabel}</span>
	</a>
</div>

<style>
.hero-shell {
	position: relative;
	border-radius: 32px;
	padding: 2rem;
	background: rgba(255, 255, 255, 0.03);
	border: 1px solid rgba(255, 255, 255, 0.08);
	min-height: 400px;
	overflow: hidden;
}

.hero-shell__background {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	object-fit: cover;
	z-index: -1;
	filter: blur(140px) saturate(180%);
}

.hero {
	max-width: 520px;
	color: white;
}

.hero__eyebrow {
	margin-bottom: 0.5rem;
}

.hero h1 {
	margin: 0;
	font-size: clamp(2rem, 4vw, 3rem);
	line-height: 1.1;
}

.hero__lead {
	margin: 1rem 0 1.5rem;
	color: rgba(255, 255, 255, 0.8);
	font-size: 1.125rem;
	line-height: 1.6;
}

.hero__actions {
	display: flex;
	gap: 0.75rem;
	flex-wrap: wrap;
}

.button {
	border-radius: 999px;
	padding: 0.75rem 1.5rem;
	text-decoration: none;
	font-weight: 600;
	font-size: 0.95rem;
	display: inline-flex;
	align-items: center;
	justify-content: center;
}

.button--primary {
	background: linear-gradient(120deg, #7084ff, #c67dff);
	color: white;
}

.button--ghost {
	border: 1px solid rgba(255, 255, 255, 0.4);
	color: white;
	background: transparent;
}

.button:hover {
	opacity: 0.9;
}

.hero-card {
	position: absolute;
	right: 2rem;
	bottom: 2rem;
	max-width: 320px;
	padding: 1.5rem;
	border-radius: 16px;
	background: rgba(255, 255, 255, 0.1);
	text-decoration: none;
	color: white;
	backdrop-filter: blur(20px);
	border: 1px solid rgba(255, 255, 255, 0.2);
	transition: transform 0.2s ease;
}

.hero-card:hover {
	transform: translateY(-4px);
}

.hero-card h2 {
	margin: 0 0 0.5rem;
	font-size: 1.25rem;
}

.hero-card p {
	margin: 0 0 1rem;
	color: rgba(255, 255, 255, 0.85);
	line-height: 1.5;
}

.hero-card__link {
	font-weight: 600;
}

@media (max-width: 900px) {
	.hero-card {
		position: static;
		margin-top: 1.5rem;
	}
}

@media (max-width: 640px) {
	.hero-shell {
		padding: 1.5rem;
		border-radius: 24px;
	}

	.hero__actions {
		flex-direction: column;
	}
}
</style>
