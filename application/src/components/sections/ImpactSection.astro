---
import MetricCard from '../ui/MetricCard.astro';
import type { LocaleCopy } from '../../../i18n.config';

interface Props {
	impact: LocaleCopy['impact'];
}

const { impact } = Astro.props;
---

<section class="relative py-16 sm:py-32 bg-gradient-to-b from-brand-primary-strong via-brand-primary to-brand-primary-strong overflow-hidden">
	<div class="absolute inset-0">
		<div class="absolute top-1/4 left-1/4 w-64 sm:w-96 h-64 sm:h-96 bg-brand-secondary/15 rounded-full blur-3xl animate-pulse-slow" data-parallax-speed="0.35"></div>
		<div class="absolute bottom-1/4 right-1/4 w-64 sm:w-96 h-64 sm:h-96 bg-brand-secondary-soft/15 rounded-full blur-3xl animate-pulse-slow animation-delay-1000" data-parallax-speed="0.5"></div>
	</div>

	<div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6">
		<h2 class="text-3xl sm:text-5xl md:text-7xl font-black text-center text-transparent bg-clip-text bg-gradient-to-r from-brand-secondary to-brand-secondary-soft mb-12 sm:mb-24 tracking-tight" data-animate="fade-up">
			{impact.title}
		</h2>

		<div class="grid grid-cols-2 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-12">
			{impact.metrics.map((metric, index) => (
				<div data-animate="scale-in" data-animate-delay={String(index * 0.08)}>
					<MetricCard 
						value={metric.value}
						label={metric.label}
						description={metric.description}
						index={index}
					/>
				</div>
			))}
		</div>
	</div>
</section>
