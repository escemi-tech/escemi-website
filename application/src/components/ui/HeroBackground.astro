---
import bgMasthead from '../../assets/bg-masthead.jpg';
---

<div id="hero-bg" class="absolute inset-0 z-0" data-parallax-speed="0.35">
	<img 
		src={bgMasthead.src} 
		alt="Desert radar landscape" 
		class="w-full h-full object-cover opacity-40"
	/>
	<!-- Atmospheric layering -->
	<div class="absolute inset-0 bg-gradient-to-tr from-brand-primary-strong/70 via-transparent to-brand-primary-soft/60"></div>
	<div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,transparent_0%,rgba(0,0,0,0.2)_100%)]"></div>
	
	<!-- Animated Radar Pulse Effect -->
	<div class="absolute inset-0 flex items-center justify-center pointer-events-none">
		<div class="radar-pulse absolute w-96 h-96 rounded-full border-2 border-brand-secondary/40 animate-radar-pulse"></div>
		<div class="radar-pulse absolute w-96 h-96 rounded-full border-2 border-brand-secondary/25 animate-radar-pulse animation-delay-1000"></div>
		<div class="radar-pulse absolute w-96 h-96 rounded-full border-2 border-brand-secondary/15 animate-radar-pulse animation-delay-2000"></div>
	</div>

	<!-- Floating geometric accents -->
	<div class="absolute top-35 right-35 w-16 h-16 border border-brand-secondary/30 rotate-25 animate-float"></div>
	<div class="absolute top-40 right-40 w-16 h-16 border border-brand-secondary/30 rotate-25 animate-float"></div>
	<div class="absolute bottom-40 left-20 w-24 h-24 border border-brand-secondary/20 -rotate-12 animate-float-delayed"></div>
</div>
