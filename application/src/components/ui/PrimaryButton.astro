---
interface Props {
	href: string;
	text: string;
	external?: boolean;
}

const { href, text, external = false } = Astro.props;
const externalProps = external ? { target: "_blank", rel: "noopener noreferrer" } : {};
---

<a 
	href={href}
	{...externalProps}
	class="group relative inline-flex items-center gap-2 sm:gap-3 bg-gradient-to-r from-brand-secondary to-brand-secondary-soft hover:from-brand-secondary-soft hover:to-brand-secondary text-brand-primary-strong font-bold px-6 sm:px-10 py-4 sm:py-5 text-base sm:text-lg overflow-hidden transition-all duration-300 shadow-[0_0_30px_rgba(236,184,7,0.25)] hover:shadow-[0_0_45px_rgba(236,184,7,0.35)]"
>
	<span class="relative z-10">{text}</span>
	<svg class="relative z-10 w-5 h-5 sm:w-6 sm:h-6 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
	</svg>
	<span class="absolute inset-0 border-2 border-brand-secondary animate-border-pulse"></span>
</a>
