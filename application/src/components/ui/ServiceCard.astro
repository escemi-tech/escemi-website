---
interface Props {
	title: string;
	description: string;
	index: number;
	isLarge?: boolean;
}

const { title, description, index, isLarge = false } = Astro.props;
const cardClass = isLarge ? 'md:row-span-2' : '';
---

<div 
	class={`group relative p-10 bg-gradient-to-br from-gray-900 to-gray-800 border border-gray-700 hover:border-cyan-400/50 transition-all duration-500 transform hover:-translate-y-2 ${cardClass}`}
	style={`animation-delay: ${index * 100}ms`}
>
	<!-- Neon corner accents -->
	<div class="absolute top-0 left-0 w-16 h-16 border-t-2 border-l-2 border-cyan-400/50 group-hover:border-cyan-400 transition-colors duration-300"></div>
	<div class="absolute bottom-0 right-0 w-16 h-16 border-b-2 border-r-2 border-blue-400/50 group-hover:border-blue-400 transition-colors duration-300"></div>

	<!-- Service number -->
	<div class="text-8xl font-black text-gray-800/50 absolute top-4 right-4 group-hover:text-cyan-900/50 transition-colors">
		0{index + 1}
	</div>

	<h3 class="relative text-3xl font-bold text-cyan-400 mb-6 z-10">
		{title}
	</h3>
	<p class="relative text-gray-300 text-lg leading-relaxed z-10">
		{description}
	</p>

	<!-- Glow effect on hover -->
	<div class="absolute inset-0 bg-gradient-to-r from-cyan-500/0 to-blue-500/0 group-hover:from-cyan-500/5 group-hover:to-blue-500/5 transition-all duration-500"></div>
</div>
