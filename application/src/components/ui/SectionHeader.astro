---
interface Props {
	title: string;
	className?: string;
}

const { title, className = '' } = Astro.props;
---

<div class={`mb-12 sm:mb-20 ${className}`}>
	<h2 class="text-3xl sm:text-5xl md:text-7xl font-black text-white mb-3 sm:mb-4 tracking-tight">
		{title}
	</h2>
	<div class="h-1 w-20 sm:w-32 bg-gradient-to-r from-brand-secondary to-brand-secondary-soft"></div>
</div>
