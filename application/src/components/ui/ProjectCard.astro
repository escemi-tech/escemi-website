---
interface Props {
	name: string;
	role: string;
	description: string;
	tags: string[];
}

const { name, role, description, tags } = Astro.props;
---

<div class="group relative bg-gradient-to-br from-gray-800 to-gray-900 p-8 border border-gray-700 hover:border-cyan-400/50 transition-all duration-500 overflow-hidden">
	<!-- Animated background on hover -->
	<div class="absolute inset-0 bg-gradient-to-br from-cyan-500/0 to-blue-500/0 group-hover:from-cyan-500/10 group-hover:to-blue-500/10 transition-all duration-500"></div>
	
	<div class="relative z-10">
		<h3 class="text-2xl font-bold text-cyan-400 mb-2">{name}</h3>
		<p class="text-sm font-semibold text-blue-400 mb-4 uppercase tracking-wider">{role}</p>
		<p class="text-gray-300 text-sm leading-relaxed mb-6">
			{description}
		</p>
		<div class="flex flex-wrap gap-2">
			{tags.map((tag) => (
				<span class="px-3 py-1 bg-cyan-500/20 text-cyan-300 text-xs font-medium border border-cyan-500/30">{tag}</span>
			))}
		</div>
	</div>
</div>
