---
export interface Props {
  title: string;
  description?: string;
  lang?: string;
}

const { title, description = 'À votre service pour vous accompagner et relever les défis de vos projets digitaux', lang = 'fr' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Meta Tags -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    
    <!-- Preload critical fonts -->
    <link rel="preload" href="/fonts/system-ui.woff2" as="font" type="font/woff2" crossorigin />
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style is:global>
  /* Import design tokens */
  @import '../styles/tokens.css';
  
  /* Tailwind base styles */
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>