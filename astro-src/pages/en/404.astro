---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/ui/Button.astro";

const title = "404 - Page not found";
const description = "The page you request does not exist";
---

<BaseLayout title={title} description={description} lang="en">
  <main
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary-3 to-accent-3"
  >
    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-6xl md:text-8xl font-bold text-primary-9 mb-6">404</h1>

      <h2 class="text-2xl md:text-3xl font-semibold text-fg mb-4">Page not found</h2>

      <p class="text-lg text-fg/80 mb-8">The page you request does not exist or has been moved.</p>

      <Button href="/en" size="lg" variant="primary"> Back to home </Button>
    </div>
  </main>
</BaseLayout>

<style>
  main {
    min-height: calc(100vh - 4rem); /* Account for nav height */
  }
</style>
