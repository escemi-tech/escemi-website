{
  "name": "escemi-website-astro",
  "version": "1.0.0",
  "description": "ESCEMI corporate website built with Astro",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/escemi-tech/escemi-website.git"
  },
  "author": {
    "name": "ESCEMI",
    "email": "developer@escemi.com"
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "clean": "rimraf dist .astro",
    "astro": "astro",
    "format": "prettier --cache --write '**/*.{ts,tsx,astro,md}'",
    "lint": "eslint \"astro-src/**/*.{ts,tsx,astro}\" --fix",
    "typecheck": "astro check"
  },
  "dependencies": {
    "astro": "^4.16.10",
    "@astrojs/tailwind": "^5.1.2",
    "@astrojs/sitemap": "^3.2.1",
    "tailwindcss": "^3.4.14",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "eslint": "^9.16.0",
    "eslint-plugin-astro": "^1.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-astro": "^0.15.0",
    "typescript": "^5.7.2",
    "rimraf": "^6.0.1"
  },
  "keywords": [
    "astro",
    "website", 
    "corporate",
    "escemi",
    "typescript"
  ],
  "license": "MIT",
  "prettier": {
    "semi": true,
    "printWidth": 100,
    "trailingComma": "es5",
    "plugins": ["prettier-plugin-astro"],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}